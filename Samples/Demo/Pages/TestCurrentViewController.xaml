    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animations="clr-namespace:Demo.Animations;assembly=Demo"
    xmlns:rg="http://rotorgames.com">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Frame BackgroundColor="Silver">
            <StackLayout Spacing="20">
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="index" />
                <Label
                    x:Name="indexLable"
                    FontSize="16"
                    HorizontalOptions="Center" />
                <Button Clicked="OnTestCurrentViewController" Text="Open TestCurrentViewController" />
                <Button Clicked="OnFilePicker" Text="Open file picker" />
            </StackLayout>
        </Frame>
    </StackLayout>
</rg:PopupPage>